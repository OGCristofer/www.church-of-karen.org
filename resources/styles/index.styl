// out: index.css

pad = @block {
  padding 10px
}

$primary = #31396B
$seconday = #911E27


.header
  width 100%
  height 50px
  background-color $primary

.pad
  {pad}

.pad-margin
  margin 10px

.nopad
  padding 0 !important

.nopad-margin
  margin 0 !important

.default-font
  font-family Roboto, Helvetica, Arial, sans-serif !important

.inner
  display block
  margin 0 auto
  @media (min-width 1250px)
    width 1250px
  @media (max-width 1250px) and (min-width 1000px)
    width 1000px
  @media (max-width 1000px) and (min-width 750px)
    width 750px
  @media (max-width 750px)
    width 100%
    {pad}
